<ul class="rig columns-3 ">

  <% for album in @albums %>

  <li>
    <a href="/albums/<%= album.id%>/edit"><img src="<%= album.artwork()%>" /></a>
    <h3><%= album.title()%></h3>
    <div class="box-left"><%= album.artist().name %></div>
    <div class="box-right"><%= album.quantity()%> in stock</div>

  </li>

  <% end %>
</ul>


